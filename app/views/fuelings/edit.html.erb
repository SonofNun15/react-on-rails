<div class="fueling form">
  <h3>
    <i class="fa fa-tachometer"></i> New fueling
  </h3>
  <%= form_for @fueling, url: @action do |f| %>
    <div class="form-group">
      <%= f.label :date, class: 'control-label' %>:
      <%= f.text_field :date, value: @fueling.date, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :gas, 'Gallons of gas: ', class: 'control-label' %>
      <%= f.text_field :gas, value: @fueling.gas, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :cost, class: 'control-label' %>:
      <%= f.text_field :cost, value: @fueling.cost, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :miles, class: 'control-label' %>:
      <%= f.text_field :miles, value: @fueling.miles, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description, class: 'control-label' %>:
      <%= f.text_field :description, value: @fueling.description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit @action_text, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
