<div class="fueling form">
  <%= form_for @fueling, url: vehicle_fuelings_path do |f| %>
    <div class="form-group">
      <%= f.label :date, class: 'control-label' %>:
      <%= f.text_field :date, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :gas, 'Gallons of gas: ', class: 'control-label' %>
      <%= f.text_field :gas, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :cost, class: 'control-label' %>:
      <%= f.text_field :cost, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :miles, class: 'control-label' %>:
      <%= f.text_field :miles, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description, class: 'control-label' %>:
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Add', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
