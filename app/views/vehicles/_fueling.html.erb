<div class="entry row">
  <div class="title col-sm-3">
    <% if fueling.above_average_mpg? %>
      <i class="fa modifier fa-caret-up increase"></i>
    <% elsif fueling.below_average_mpg? %>
      <i class="fa modifier fa-caret-down decrease"></i>
    <% end %>

    <i class="fa fa-fw fa-tachometer"></i>
    <span><%= pretty_number fueling.mpg %> MPG</span>
  </div>
  <div class="detail col-sm-4">
    <span><%= pretty_number fueling.miles %> miles</span>
  </div>
  <div class="date col-sm-3">
    <span><%= fueling.date %></span>
  </div>
  <div class="action col-sm-2">
    <a href="<%= edit_vehicle_fueling_path fueling.vehicle.id, fueling.id %>" class="btn btn-link">
      <i class="fa fa-pencil"></i>
    </a>
    <%= form_tag vehicle_fueling_path(fueling.vehicle.id, fueling.id),
                 method: 'DELETE', class: 'button_form' do %>
      <button type="submit" class="btn btn-link">
        <i class="fa fa-times"></i>
      </button>
    <% end %>
  </div>
</div>
