<div class="vehicle form">
  <%= form_for @vehicle, url: @action do |f| %>
    <div class="form-group">
      <%= f.label :year, class: 'control-label' %>:
      <%= f.text_field :year, value: @vehicle.year, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :make, class: 'control-label' %>:
      <%= f.text_field :make, value: @vehicle.make, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :model, class: 'control-label' %>:
      <%= f.text_field :model, value: @vehicle.model, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :color, class: 'control-label' %>:
      <%= f.text_field :color, value: @vehicle.color, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :base_mileage, 'Mileage: ', class: 'control-label' %>
      <%= f.text_field :base_mileage, value: @vehicle.base_mileage, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit @action_text, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
