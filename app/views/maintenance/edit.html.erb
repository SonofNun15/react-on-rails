<div class="maintenance form">
  <h3>
    <i class="fa fa-wrench"></i> New maintenance
  </h3>
  <%= form_for @maintenance, url: @action do |f| %>
    <div class="form-group">
      <%= f.label :date, class: 'control-label' %>:
      <%= f.text_field :date, value: @maintenance.date, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :mechanic, class: 'control-label' %>:
      <%= f.text_field :mechanic, value: @maintenance.mechanic, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :cost, class: 'control-label' %>:
      <%= f.text_field :cost, value: @maintenance.cost, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description, class: 'control-label' %>
      <%= f.text_field :description, value: @maintenance.description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit @action_text, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
