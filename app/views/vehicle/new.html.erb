<div class="new vehicle form">
  <%= form_for @vehicle, url: vehicle_path do |f| %>
    <div class="form-group">
      <%= f.label :year, class: 'control-label' %>:
      <%= f.text_field :year, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :make, class: 'control-label' %>:
      <%= f.text_field :make, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :model, class: 'control-label' %>:
      <%= f.text_field :model, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description, class: 'control-label' %>:
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :base_mileage, 'Mileage: ', class: 'control-label' %>
      <%= f.text_field :base_mileage, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
